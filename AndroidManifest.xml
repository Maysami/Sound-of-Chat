<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.elenoon.sound"
          android:versionCode="1"
          android:versionName="1.0">
    
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.global_search" />
    <uses-permission android:name="android.permission.read_phone_state"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        
        <activity android:name="MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.elenoon.sound.CustomDialogActivity" android:label="@string/app_name"/>
        <activity android:name="com.elenoon.sound.SoundListActivity" android:label="@string/app_name"/>
        <activity android:name="com.elenoon.sound.AudioRecorderActivity" android:label="@string/app_name"/>
        <activity android:name="com.elenoon.sound.MusicPlayerActivity" android:label="@string/app_name"/>
        
        
    </application>
</manifest>
